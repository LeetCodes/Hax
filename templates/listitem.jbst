<%@ Control Name="template.listitem" Language="JavaScript" %>
<span data-role="button" jbst:visible="<%= !!this.data.play %>" class="play" onclick="<%= this.data.play %>">â–¶</span>
<span data-role="button" jbst:visible="<%= !!this.data.remove %>" class="remove" onclick="<%= this.data.remove %>">-</span>
<span data-role="button" jbst:visible="<%= !!this.data.add %>" class="add" onclick="<%= this.data.add %>">+</span>

<jbst:control name="template.link">
	<div class="thumbnail" jbst:visible="<%= !!this.data.thumbnail %>">
		<img jbst:visible="<%= !!this.data.thumbnail %>" src="<%= this.data.thumbnail %>"/>
	</div>
	<div jbst:visible="<%= !!this.data.number %>" class="number"><%= this.data.number %>.</div>
	<div class="<%= this.data.details ? 'line1' : 'label' %>"><%= this.data.label %></div>
	<div class="line2" jbst:visible="<%= !!this.data.details %>">
		<jbst:control data="this.data.details">
			<span><%= this.data %></span>
		</jbst:control>
	</div>
</jbst:control>
