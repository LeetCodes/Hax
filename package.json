  "scripts": {
    "clean": "rm -r build/* && mkdir build/webinterface.basic",
    "build:script.js": "jspm bundle-sfx js/main build/webinterface.basic/script.js",
    "build:style.css": "postcss -u postcss-import -u postcss-cssnext -i css/style.css -o build/webinterface.basic/style.css",
    "build:index.html": "handlebars package.json < templates/index.html > build/webinterface.basic/index.html",
    "build:addon.xml": "handlebars package.json < templates/addon.xml > build/webinterface.basic/addon.xml",
    "build:readme.md": "handlebars package.json < templates/README.md > build/webinterface.basic/README.md",
    "build:assets": "cp -r templates img assets/* build/webinterface.basic/",
    "build:zip": "zip -r build/webinterface.basic.zip build/webinterface.basic && file build/webinterface.basic.zip",
    "build": "npm run clean && npm run build:script.js && npm run build:style.css && npm run build:index.html && npm run build:addon.xml && npm run build:readme.md && npm run build:assets && npm run build:zip"
  },
  "dependencies": {
    "handlebars": "^4.0.5",
    "handlebars-cmd": "^0.1.4",
    "jspm": "^0.16.39",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.6.0",
    "postcss-import": "^8.1.2"
  },
  "jspm": {
    "dependencies": {
      "babel-plugin-transform-es2015-arrow-functions": "npm:babel-plugin-transform-es2015-arrow-functions@^6.8.0",
      "babel-polyfill": "npm:babel-polyfill@^6.9.1",
      "babel-preset-es2015": "npm:babel-preset-es2015@^6.9.0",
      "handlebars": "github:components/handlebars.js@^4.0.5",
      "json": "github:systemjs/plugin-json@^0.1.2",
      "moment": "npm:moment@^2.13.0",
      "whatwg-fetch": "npm:whatwg-fetch@^1.0.0"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    },
    "buildConfig": {
      "transpileES6": true,
      "minify": false
    }
  }
}
