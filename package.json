  },
  "screenshot": {
    "url": "http://i.imgur.com/oUNe3E9.png"
  },
  "links": {
    "Screenshots": "http://imgur.com/a/ss0uj",
    "Forum thread": "http://forum.kodi.tv/showthread.php?tid=270698",
