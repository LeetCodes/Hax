  "name": "Basic",
  "id": "webinterface.basic",
  "summary": "A fast and simple remote control for mobile devices.",
  "description": "Basic is a web interface for the KodiÂ® media center. Designed to be fast and easy to use, it supports modern browsers including Android, Internet Explorer 9 and Edge.",
  "keywords": [
    "Kodi",
    "XBMC"
  ],
  "homepage": "http://bailey.geek.nz/remote",
  "author": {
    "name": "Samuel Bailey",
    "email": "sam@bailey.geek.nz",
    "url": "http://bailey.geek.nz"
  },
